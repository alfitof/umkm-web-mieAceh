              <a href="/register" class="nav__link font-medium">Daftar</a>
            </li>

            <li class="nav__item">
              <a href="/login" class="nav__link font-medium">Masuk</a>
            </li>
            <% } %>
            <li class="nav__items">
              <a href="/cart" class="button button--ghost">
                <span id="cartCounter"><%= session.cart ? session.cart.totalQty : '' %> </span>
                <img src="/img/cart.png" alt=""
              /></a>
            </li>
          </ul>

          <div class="nav__close" id="nav-close">
            <i class="bx bx-x"></i>
          </div>
        </div>

        <div class="nav__toggle" id="nav-toggle">
          <i class="bx bx-grid-alt"></i>
        </div>
      </nav>
    </header>
