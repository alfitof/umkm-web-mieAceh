<section class="status mt-12">
  <div class="container mx-auto">
    <div class="status-box w-full lg:w-2/3 mx-auto">
      <div class="flex items-center justify-between mb-12">
        <h1 class="text-xl">Lacak Pemesanan</h1>
        <h6 class="id-cart py-1 rounded-full px-4 text-green-600 text-xs"><%=order._id%></h6>
        <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>" />
      </div>
      <ul>
        <li class="status_line text-sm md:text-xl pb-12" data-status="order_placed"><span>Orderan diterima</span></li>
        <li class="status_line text-sm md:text-xl pb-12" data-status="confirmed"><span>Orderan dikonfirmasi</span></li>
        <li class="status_line text-sm md:text-xl pb-12" data-status="prepared"><span>Orderan sedang disajikan</span></li>
        <li class="status_line text-sm md:text-xl pb-12" data-status="delivered"><span>Orderan sedang diantar</span></li>
        <li class="status_line text-sm md:text-xl" data-status="completed  "><span>Orderan selesai </span><img class="ramah" src="/img/senyum.png" alt="" /></li>
      </ul>
    </div>
  </div>
</section>
