<section class="cart py-16">
  <% if (session.cart) { %>
  <div class="order container mx-auto xl:w-1/2">
    <div class="flex items-center border-b border-white pb-4">
      <img class="cart1" src="/img/cart-black.png" alt="" />
      <h1 class="cart1 ml-4 text-2xl">Keranjang saya</h1>
    </div>
    <div class="mie-list">
      <% for(let mie of Object.values(session.cart.items)) { %>
      <div class="flex items-center my-8">
        <img class="w-24" src="/img/<%= mie.item.image%>" alt="" />
        <div class="flex-1 ml-4">
          <h1><%= mie.item.name%></h1>
          <span class="text-white"><%= mie.item.flavor%></span>
        </div>
        <span class="flex-1 text-white"><%= mie.qty%></span>
        <span class="harga text-lg">Rp. <%= mie.item.price * mie.qty%></span>
      </div>
      <% } %>
    </div>
    <hr />
    <div class="text-right py-4">
      <div>
        <span class="text-lg text-white">Total pembelian:</span>
        <span class="amount text-2xl ml-2">Rp. <%= session.cart.totalPrice%></span>
      </div>
      <% if(user) { %>
      <div>
        <form action="/orders" method="POST" class="mt-6">
          <input name="phone" type="text" class="border border-white p-2 w-1/2 mb-4" placeholder="Nomor telepon" />
          <input name="address" type="text" class="border border-white p-2 w-1/2" placeholder="Alamat Lengkap" />
          <div>
            <button class="tombol-cart px-6 py-2 rounded-full text-white mt-6" type="submit">Pesan sekarang!</button>
          </div>
        </form>
      </div>
      <% } else { %>
      <div>
        <a href="/login" class="tombol-cart inline-block cursor-pointer px-6 py-2 rounded-full text-white font-medium mt-6">Masuk untuk melanjutkan</a>
      </div>
      <% } %>
    </div>
  </div>
  <% } else {%>
  <div class="empty-cart">
    <div class="container mx-auto text-center">
      <h1 class="text-3xl mb-2">Keranjang Masih Kosong <img class="emoji" src="/img/emoji.png" alt="" /></h1>
      <p class="text-white text-lg mb-12">
        Kamu mungkin belum memesan mie.<br />
        Untuk memesan mie, silahkan buka halaman utama.
      </p>
      <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="cart" />
      <a href="/" class="tombol-cart inline-block px-6 py-2 rounded-full text-white mt-12">Kembali</a>
    </div>
  </div>
  <% } %>
</section>
