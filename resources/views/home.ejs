<section class="hero">
  <div class="container mx-auto flex items-center justify-between px-6 py-4">
    <div class="w-1/2 mb-5 ml-2">
      <h6 class="text-lg"><em>Apakah kamu lapar?</em></h6>
      <h1 class="text-6xl font-bold">Gaskeun ajig!</h1>
      <button class="tombol font-semibold text-white py-2 px-4 rounded-full">Order</button>
    </div>
    <div class="bakso">
      <img src="/img/hero-pizza.png" alt="" />
    </div>
  </div>
</section>
<section class="menu container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8">Semua Menu</h1>
  <div class="grid grid-cols-4 gap-x-12 gap-y-12">
    <% mies.forEach(function(mie){ %>
    <div class="w-64">
      <img class="gambar-mie h-40 mb-4 mx-auto" src="/img/<%= mie.image%>" alt="mie1" />
      <div class="text-center">
        <h2 class="mb-4 text-lg"><%= mie.name%></h2>
        <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= mie.flavor%></span>
        <div class="flex items-center justify-around mt-6">
          <span class="font-bold text-lg">Rp. <%= mie.price%></span>
          <button data-mie="<%= JSON.stringify(mie)%>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
            <span>+</span>
            <span class="ml-4">Tambah</span>
          </button>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>
